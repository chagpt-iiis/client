{
	"compilerOptions": {
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "createElement",
		"jsxFragmentFactory": "Fragment",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": ".",
		"strict": true,
		"target": "esnext",
	},
	"include": ["src/**/*"],
}
